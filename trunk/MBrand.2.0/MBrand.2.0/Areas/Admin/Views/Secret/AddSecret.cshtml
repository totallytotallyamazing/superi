@model MBrand.Models.Secret
<link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
@if (Model != null)
{
    <script type="text/javascript">
        window.top.secretAdded(@Model.Id);
    </script>
}
@using (Html.BeginForm("AddSecret", "Secret", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @:Картинка:<br />
    <input type="file" id="secretImage" name="secretImage" />
    @:Важность:<br />
    <input type="number" id="sortOrder" name="sortOrder" />
    <input type="submit" value="Добавить" />
}