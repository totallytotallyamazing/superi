                    </local:ClipThumb.RenderTransform>
                </local:ClipThumb>
                <local:ClipThumb ImageUrl="/Tina;Component/Assets/playerBg.jpg" Title="Ключик" Width="132">
                    <local:ClipThumb.RenderTransform>
                        <ScaleTransform/>
                    </local:ClipThumb.RenderTransform>
                </local:ClipThumb>
                <local:ClipThumb ImageUrl="/Tina;Component/Assets/playerBg.jpg" Title="Ключик" Width="132">
                    <local:ClipThumb.RenderTransform>
