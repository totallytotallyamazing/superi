    					<GradientStop Color="#FFE4EAEC" Offset="1"/>
    				</LinearGradientBrush>
    			</Rectangle.Fill>
    		</Rectangle>
    		<Rectangle Fill="#FFA4B9BE" Stroke="#FF96AAAE" HorizontalAlignment="Stretch" Margin="3" VerticalAlignment="Stretch" StrokeThickness="2"/>
            <local:RotatePanel x:Name="rotatePanel" Spacing="5" SegmentLength="132" Rotate="rotatePanel_Rotate">
				<local:ClipThumb ImageUrl="/Tina;Component/Assets/polusThumb.jpg" Title="Ключик" Width="132">
                    <local:ClipThumb.RenderTransform>
                        <ScaleTransform/>
                    </local:ClipThumb.RenderTransform>
                </local:ClipThumb>
                <local:ClipThumb ImageUrl="/Tina;Component/Assets/smylThumb.jpg" Title="Ключик" Width="132">
                    <local:ClipThumb.RenderTransform>
                        <ScaleTransform/>
                    </local:ClipThumb.RenderTransform>
                </local:ClipThumb>
                <local:ClipThumb ImageUrl="/Tina;Component/Assets/playerBg.jpg" Title="Ключик" Width="132">
                    <local:ClipThumb.RenderTransform>
                        <ScaleTransform/>
                    </local:ClipThumb.RenderTransform>
                </local:ClipThumb>
                <local:ClipThumb ImageUrl="/Tina;Component/Assets/playerBg.jpg" Title="Ключик" Width="132">
                    <local:ClipThumb.RenderTransform>
